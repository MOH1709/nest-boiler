{
  "preset": "@nestjs/testing",
  "testEnvironment": "node",
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "test",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "coverageDirectory": "../coverage",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/../src/$1"
  }
}
